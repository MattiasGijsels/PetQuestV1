@namespace PetQuestV1.Components.UserView
@using PetQuestV1.Contracts.Models
@using Microsoft.AspNetCore.Components.Forms


<div class="card h-100 shadow-sm border-0">
    <div class="card-img-top-container position-relative">
        @if (!string.IsNullOrEmpty(Pet.ImagePath))
        {
            <img src="@Pet.ImagePath" class="card-img-top pet-card-img" alt="Image of @Pet.PetName">
            <button class="btn btn-danger btn-sm delete-image-btn" @onclick="DeleteImage">
                <i class="bi bi-trash"></i>
            </button>
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center bg-light text-muted pet-card-img no-image-placeholder">
                <i class="bi bi-image-fill display-4"></i>
            </div>
            <div class="position-absolute bottom-0 end-0 p-2">
                <InputFile OnChange="OnInputFileChange" class="form-control-sm" accept="image/*" />
            </div>
        }
    </div>
    <div class="card-body">
        <h5 class="card-title text-primary">@Pet.PetName</h5>
        <ul class="list-unstyled mb-0">
            <li><strong>Species:</strong> @(Pet.Species?.SpeciesName ?? "N/A")</li>
            <li><strong>Breed:</strong> @(Pet.Breed?.BreedName ?? "N/A")</li>
            <li><strong>Age:</strong> @(Pet.Age?.ToString() ?? "Unknown")</li>
            <li><strong>Owner:</strong> @(Pet.Owner?.UserName ?? "N/A")</li>
            <li><strong>Advantage:</strong> @Pet.Advantage</li>
        </ul>
    </div>
</div>

<style>
    .pet-card-img {
        width: 100%;
        height: 180px; /* Reduced height for consistency */
        object-fit: cover; /* Covers the area, cropping if necessary */
        border-top-left-radius: var(--bs-card-border-radius);
        border-top-right-radius: var(--bs-card-border-radius);
    }

    .card-img-top-container {
        overflow: hidden; /* Hide anything outside the container if object-fit messes up */
    }

    .no-image-placeholder {
        height: 150px; /* Same height as image */
        font-size: 3rem;
        background-color: #f8f9fa; /* Light gray background */
        color: #adb5bd; /* Muted icon color */
    }

    .delete-image-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
        background-color: rgba(220, 53, 69, 0.8); /* Red with transparency */
        border: none;
    }

    .delete-image-btn:hover {
        background-color: rgba(220, 53, 69, 1);
    }

    /* New styles for compact card body */
    .card-body .card-title {
        margin-bottom: 0.5rem; /* Reduce margin below title */
        font-size: 1.15rem; /* Slightly smaller title font */
    }

    .card-body .list-unstyled {
        font-size: 0.875rem; /* Smaller font for list items */
        line-height: 1.3; /* Adjust line height for better spacing */
    }
    
    .card-body .list-unstyled li {
        margin-bottom: 0.2rem; /* Reduce space between list items */
    }
</style>